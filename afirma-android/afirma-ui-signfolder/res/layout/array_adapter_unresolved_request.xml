<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/priorityIcon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="4dp"
        android:contentDescription="@string/accesibility_icon_priority"
        android:src="@drawable/icon_priority_2" />

    <TextView
        android:id="@+id/primaryText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/priorityIcon"
        android:layout_toLeftOf="@id/dateText"
        android:layout_above="@id/secondaryText"
        
        android:layout_marginTop="5dp"
        android:singleLine="true"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textIsSelectable="false" />

    <TextView
        android:id="@+id/dateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@id/typeIcon"
        
        android:layout_above="@id/secondaryText"
        
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        
        android:gravity="center_horizontal"
        android:singleLine="true"
        android:textIsSelectable="false" />

    <TextView
        android:id="@+id/secondaryText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/primaryText"
        android:layout_alignRight="@id/dateText"
        android:layout_alignBottom="@id/priorityIcon"
        android:singleLine="true"
        android:textIsSelectable="false" />
	
	<CheckBox
	    android:id="@+id/check"
	    android:layout_width="wrap_content"
	    android:layout_height="match_parent"
	    android:layout_marginRight="0dp"
	    android:clickable="true"
	    android:focusable="false"
        android:layout_alignParentRight="true" />

	<ImageView
	    android:id="@+id/typeIcon"
	    android:layout_width="wrap_content"
	    android:layout_height="match_parent"
	    android:layout_marginRight="5dp"
	    android:contentDescription="@string/accesibility_icon_type"
	    android:src="@drawable/icon_sign" 
        android:layout_toLeftOf="@id/check" />
	
</RelativeLayout>